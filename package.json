{
  "name": "doc-proof",
  "version": "1.0.0",
  "description": "Blockchain Document Certification Platform - Enterprise Web3 SaaS",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:seed": "tsx prisma/seed.ts",
    "db:studio": "prisma studio",
    "docker:dev": "docker compose -f docker-compose.dev.yml up -d",
    "docker:dev:stop": "docker compose -f docker-compose.dev.yml down",
    "contracts:compile": "cd contracts && npx hardhat compile",
    "contracts:test": "cd contracts && npx hardhat test",
    "contracts:deploy:mumbai": "cd contracts && npx hardhat run scripts/deploy.js --network mumbai",
    "contracts:deploy:polygon": "cd contracts && npx hardhat run scripts/deploy.js --network polygon",
    "postinstall": "prisma generate"
  },
