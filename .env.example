# DOC PROOF - Environment Variables
# Copy to .env and configure

# ============= DATABASE =============
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/docproof"

# ============= REDIS =============
REDIS_URL="redis://localhost:6379"

# ============= AUTH =============
JWT_SECRET="generate-a-secure-32-char-secret-for-production"

# ============= BLOCKCHAIN =============
# Polygon Mumbai (testnet, deprecated)
POLYGON_MUMBAI_RPC_URL="https://rpc.ankr.com/polygon_mumbai"
# Polygon Amoy (current testnet - preferred)
POLYGON_AMOY_RPC_URL="https://rpc-amoy.polygon.technology"
# Polygon Mainnet
POLYGON_MAINNET_RPC_URL="https://polygon-rpc.com"

# Deployer/Signer wallet private key (for certifying documents)
# Use a 64-char hex key (or 0x + 64 chars). Do NOT use placeholder text.
PRIVATE_KEY="your-metamask-private-key"
# Optional: org wallet key. If invalid/placeholder, PRIVATE_KEY is used
# BLOCKCHAIN_SIGNER_PRIVATE_KEY=""

# Contract address after deployment
NEXT_PUBLIC_DOC_PROOF_CONTRACT_ADDRESS="0x..."
NEXT_PUBLIC_CHAIN_ID="80001"

# PolygonScan API for contract verification
POLYGONSCAN_API_KEY=""

# ============= IPFS =============
# Option 1: Pinata
IPFS_PROVIDER="pinata"
PINATA_API_KEY=""
PINATA_API_SECRET=""

# Option 2: Web3.Storage
# IPFS_PROVIDER="web3storage"
# WEB3_STORAGE_TOKEN=""

IPFS_GATEWAY="https://ipfs.io/ipfs"

# ============= APP =============
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Enable maintenance mode (redirects all to /maintenance)
MAINTENANCE_MODE="false"
